# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/twilio_voice

# Logging
LOG_LEVEL=debug

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here
